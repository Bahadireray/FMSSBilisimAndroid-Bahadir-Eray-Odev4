<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_image"
    tools:context=".view.HomeFragment">


    <TextView
        android:id="@+id/txtHomeText"
        android:layout_width="335dp"
        android:layout_height="162dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="501dp"
        android:fontFamily="@font/amaranth"
        android:text="@string/let_s_explore_the_solar_system_with_explorer"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homePageImage"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_marginBottom="143dp"
        android:src="@drawable/astranot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeText" />

    <LinearLayout
        android:id="@+id/loginButton"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/home_button"
        android:gravity="center|center_horizontal|center_vertical"
        android:onClick="loginButton"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePageImage">

        <TextView
            android:id="@+id/homeButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="Letâ€™s Go "
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/homeButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:src="@drawable/rocket" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>